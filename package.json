{
  "name": "@relativistic-ui/gravity",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:prepare": "turbo dev:prepare",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "coverage": "turbo coverage",
    "deploy:patch": "turbo deploy:patch",
    "deploy:minor": "turbo deploy:minor",
    "deploy:major": "turbo deploy:major",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.4.1",
    "turbo": "^2.3.3",
    "typescript": "5.7.2",
    "prettier-plugin-embed": "^0.4.15"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ]
}